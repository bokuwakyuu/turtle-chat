@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Gudea:400,700);


do-radial-gradient(args...)
  background args[3]
  background-image -webkit-radial-gradient(unquote(join(',', args)))
  background-image -moz-radial-gradient(unquote(join(',', args)))
  background-image -ms-radial-gradient(unquote(join(',', args)))
  background-image -o-radial-gradient(unquote(join(',', args)))
  background-image radial-gradient(unquote(join(',', args)))

box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  box-shadow args

body
  margin: 0
  font-family: sans-serif
  font-size: 14px
  color: #404040
  // overflow: hidden
  height: 100%
  width: 100%

html
  height: 100%

td, li
  font-family: sans-serif
  font-size: 14px
  color: #404040

a
  color: #000080
  text-decoration: none

h1
  font-family: 'Gudea', 'Georgia', sans-serif
  display: block
  float: left
  margin: 10px 0 0 7px

h2
  font-family: 'Gudea', 'Georgia', sans-serif
  display: block
  margin: 3px 0 10px 10px

input
  outline: none
  margin: 2px

input.text[disabled]
  background-color: #f0f0f0

input.button
  border: 1px outset #a0a0a0
  cursor: pointer

input[readonly="readonly"]
  background-color: #f0f0f0

header
  height: 55px
  display: block
  padding: 10px 0 0 30px
  background: linear-gradient(top, #d0d0d0, #b0b0b0)
  background-color: #b0b0b0
  position: relative
  z-index: 999999

header #logo
  width: 48px
  height: 48px
  display: block
  float: left
  background: url(../logo.png), no-repeat

.divider
  width: 100%
  height: 11px
  background-color: #22201f
  display: block
  clear: both
  position: relative
  z-index: 999998
  box-shadow(0 4px 19px 2px #cecece)

#error-alert
  height: 32px
  width: 32px
  background: url(../images/ok.png), no-repeat
  cursor: pointer

.wrap
  width: 575px
  margin: 0 auto

.wrap-box-1
  position: relative
  float: left
  padding: 5px 7px 0 0
  width: 240px
  clear: right

.wrap-box-2
  position: relative
  float: left
  padding: 5px 0 0 7px
  width: 320px

.clearfix
  clearfix()

.center
  margin: 0 auto

// phone.styl

.has-shadow
  border: 1px solid #a0a0a0
  box-shadow(3px 3px 10px #cecece)
  -ms-filter: "progid:DXImageTransform.Microsoft.Shadow(Strength=4, Direction=135, Color='#808080')"
  filter: unquote("progid:DXImageTransform.Microsoft.Shadow(Strength=4, Direction=135, Color='#808080')")

.has-gradient
  background: linear-gradient(top, #f0f0f0, #e0e0e0)
  filter: unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr='#f0f0f0', endColorstr='#e0e0e0')")

.has-center-gradient
